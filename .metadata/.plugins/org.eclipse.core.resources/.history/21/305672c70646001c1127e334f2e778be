package br.com.alura.java.io.teste;

import java.io.UnsupportedEncodingException;
import java.nio.charset.Charset;
import java.nio.charset.StandardCharsets;

public class TesteUnicodeEEncoding {

	public static void main(String[] args) throws UnsupportedEncodingException {

		String s = "ç";
		System.out.println("CodePoint da letra " + s + ": " + s.codePointAt(0));
		System.out.println();
		
		Charset charset = Charset.defaultCharset();
		System.out.println("Charset padrão do Sistema Operacional: " + charset.displayName());
		System.out.println();
		
		byte[] bytes = s.getBytes("windows-1252");
		System.out.println("Guardando os bytes em um Array e forçando o charset para: " + bytes.length + ", windows-1252");
		String sNovo = new String(bytes, "windows-1252");
        System.out.println("Bytes em String com o Charset windows-1252: " + sNovo);
        System.out.println();
		
		bytes = s.getBytes("UTF-16");
        System.out.println("Guardando os bytes em um Array e forçando o charset para: " + bytes.length + ", UTF-16");
        sNovo = new String(bytes, "windows-1252");
        System.out.println("Bytes em String com o Charset windows-1252: " + sNovo);
        sNovo = new String(bytes, "UTF-16");
        System.out.println("Corrigido o encoding para: " + bytes.length + ", UTF-16");
        System.out.println("Letra: " + s);
        System.out.println();
        
        bytes = s.getBytes(StandardCharsets.US_ASCII);
        System.out.println("Guardando os bytes em um Array e forçando o charset para: " + bytes.length + ", US_ASCII");
        sNovo = new String(bytes, "windows-1252");
        System.out.println("Bytes em String com o Charset windows-1252: " + sNovo);
        System.out.println();
        
	}
}